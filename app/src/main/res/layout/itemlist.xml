<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="6dp">

        <ImageView
            android:id="@+id/itemsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_alignBottom="@id/itemsImage"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:id="@+id/vh_item_title"
            style="@style/item_title" />

        <TextView
            android:layout_below="@+id/itemsImage"
            android:textColor="?android:textColorSecondary"
            android:id="@+id/vh_item_description"
            style="@style/item_title" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
